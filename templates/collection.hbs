{{!-- 
    Support for Shopify collections
    https://shopify.dev/docs/storefront-api/reference/object/collection
    - No collection found
    - No products in collection
 --}}
{{#unless (eq context.tree.collection.__args.handle "not-found-collection")}}
   {{#if (eq context.tree.collection.__args.handle "no-items-collection")}}
        {{> collection products_total=0}}
    {{else}}
        {{> collection products_total=(select context.tree.collection.products.__args.first select context.tree.collection.products.__args.last 0) }}
    {{/if}}
{{/unless}}
