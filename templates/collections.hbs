{{!-- 
    Support for Shopify collections
    https://shopify.dev/docs/storefront-api/reference/object/collection
    - No collections
    - No products in collection
 --}}
{
    "totalCount": {{faker "number.int" min=1 max=100}},
    "pageInfo": {{> cursor noPreviousPage=true}},
    "edges": [
        {{#repeat (select context.tree.collections.__args.first 10)}}
            {
                "cursor": "{{faker "string.alphanumeric" 5}}",
                "node": {{> collection products_total=(select context.tree.collection.products.__args.first context.tree.collection.products.__args.last 0)}}
            }
        {{/repeat}}
    ],
    "nodes": [
        {{#repeat (select context.tree.collections.__args.first 10)}}
            {{> collection products_total=(select context.tree.collection.products.__args.first context.tree.collection.products.__args.last 0)}}
        {{/repeat}}
    ]
}